# Google Cloud Credentials
GOOGLE_SERVICE_ACCOUNT_JSON=./credentials.json

# Google Drive Folder IDs
GOOGLE_DRIVE_RESUMES_FOLDER_ID=your_resumes_folder_id
GOOGLE_DRIVE_JD_FOLDER_ID=your_jd_folder_id
GOOGLE_SHEETS_OUTPUT_ID=your_output_sheet_id

# LiteLLM Configuration (supports: openai, gemini, claude, ollama)
LITELLM_PROVIDER=openai
LITELLM_MODEL=gpt-4o
LITELLM_API_KEY=your_api_key

# For Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=Hiring Intelligence <your_email@gmail.com>

# Founder Notification Email
FOUNDER_EMAIL=founder@company.com

# Thresholds
RELEVANCE_THRESHOLD=60

# Polling Interval (ms)
DRIVE_POLL_INTERVAL=30000
